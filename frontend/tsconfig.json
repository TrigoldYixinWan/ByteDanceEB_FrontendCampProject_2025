{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["react", "react-dom", "node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["app", "lib", ".next/types/**/*.ts"],
  "exclude": ["dist"]
}
